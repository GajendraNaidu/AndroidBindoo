<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="280dp"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@drawable/winner_dialog_background">

    <!-- Trophy/Star Icon -->
    <TextView
        android:id="@+id/trophyIcon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ðŸ†"
        android:textSize="48sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="8dp" />

    <!-- Winner Title -->
    <TextView
        android:id="@+id/winnerTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/trophyIcon"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="12dp"
        android:text="WINNER!"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#FFD700"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Winner Name -->
    <TextView
        android:id="@+id/winnerName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/winnerTitle"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="6dp"
        android:text="YOU"
        android:textSize="28sp"
        android:textStyle="bold"
        android:textColor="#4317D5"
        android:shadowColor="#000000"
        android:shadowDx="2"
        android:shadowDy="2"
        android:shadowRadius="4" />

    <!-- Score Display -->
    <LinearLayout
        android:id="@+id/scoreContainer"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/winnerName"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/playerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You: 10"
            android:textSize="14sp"
            android:textColor="#4317D5"
            android:textStyle="bold"
            android:layout_marginEnd="16dp" />

        <TextView
            android:id="@+id/computerScore"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Computer: 8"
            android:textSize="14sp"
            android:textColor="#FD9B16"
            android:textStyle="bold" />

    </LinearLayout>

    <!-- Play Again Button -->
    <LinearLayout
        android:id="@+id/buttonContainer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/scoreContainer"
        android:layout_marginTop="20dp"
        android:orientation="horizontal"
        android:gravity="center">

        <TextView
            android:id="@+id/playAgainButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PLAY AGAIN"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_play_again"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:layout_marginEnd="8dp"
            android:clickable="true" />

        <TextView
            android:id="@+id/exitButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="EXIT"
            android:textSize="14sp"
            android:textStyle="bold"
            android:textColor="#FFFFFF"
            android:background="@drawable/button_exit"
            android:paddingLeft="20dp"
            android:paddingRight="20dp"
            android:paddingTop="8dp"
            android:paddingBottom="8dp"
            android:clickable="true" />

    </LinearLayout>

</RelativeLayout>
